    "prepublish": "npm run test && uglifyjs build/arrays.js -c -m -o build/arrays.min.js"
  },
  "devDependencies": {
    "d3-bundler": "~0.2.5",
    "faucet": "0.0",
    "tape": "4",
    "uglifyjs": "2"
  }
